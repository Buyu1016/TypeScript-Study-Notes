{
    "compilerOptions": {
        "target": "ES2015", // 编译后的代码版本标准
        "module": "CommonJs", // 编译后的代码模块化标准
        "lib": ["ES7", "DOM"], // 默认情况下代码的环境配置
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true,
        "esModuleInterop": true, 
        "noEmitOnError": true,
        "noImplicitUseStrict": false,
        "moduleResolution": "Node",
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "noImplicitThis": true
    }
}