{
  "compilerOptions": { // 编译选项
    "target": "ES2015", // 编译后的代码版本标准
    "module": "CommonJs", // 编译后的代码模块化标准
    "lib": ["ES7", "DOM"], // 默认情况下代码的环境配置
    "outDir": "./dist",
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitUseStrict": false
  },
  "include": ["./src"],
  // "files": ["./src/index.ts"]
}
